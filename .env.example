# Horse Breed Service Environment Configuration
# Copy this file to .env and update with your actual values
# NEVER commit .env file to version control!

# Database Configuration - SECURE THESE VALUES!
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_NAME=horse_breeds_db
DATABASE_USER=horselover
DATABASE_PASSWORD=your-secure-password-here-minimum-16-chars

# Security Configuration - CRITICAL: Use strong values in production!
SECRET_KEY=your-secret-key-minimum-32-characters-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Horse Breed Service
PROJECT_VERSION=1.0.0
DEBUG=false

# Table Management (be careful with these!)
AUTO_CREATE_TABLES=true
RECREATE_TABLES=false

# CORS Settings
ALLOWED_HOSTS=["*"]
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True